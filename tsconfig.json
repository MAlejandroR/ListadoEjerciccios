{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "strict": true,
        "types": ["vite/client"],
      "allowSyntheticDefaultImports": true
    },
    "include": ["resources/js/**/*"]
}
